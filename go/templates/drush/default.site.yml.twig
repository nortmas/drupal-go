# See https://github.com/drush-ops/drush/blob/master/examples/example.site.yml
{% set first_domain = project_machine_name %}
{% if multisite is not empty %}
  {% for key, value in multisite|slice(0,1) %}
      {% set first_domain = key %}
  {% endfor %}
{% endif %}

self:
  root: '/var/www/html/web'
  uri: '{{ first_domain }}.docker.localhost'

{% for key, server in servers %}
{{ key }}:
  host: '{{ server.host }}'
  user: '{{ server.user }}'
  root: '/var/www/html/web'
  uri: '{{ first_domain }}.{{ key }}.{{ server.domain }}'
  paths:
    drush-script: '/home/{{ server.user }}/{{ project_machine_name }}/{{ project_machine_name }}-{{ key }}/drush/drush-run.sh'

{{ key }}-files:
  host: '{{ server.host }}'
  user: '{{ server.user }}'
  root: '/home/{{ server.user }}/{{ project_machine_name }}/{{ project_machine_name }}-{{ key }}/web'
  uri: '{{ first_domain }}.{{ key }}.{{ server.domain }}'
  paths:
    files: 'sites/default/files'

{% endfor %}