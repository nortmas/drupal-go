variables:
  ARTIFACT_DIR: {{ deploy.runner_artifact_dir }}
  SERVER_DIR: {{ server.project_dir }}
  SERVER_HOST: {{ server.host }}
  SERVER_USER: {{ server.user }}

stages:
  - deploy
  - test

deploy_dev:
  stage: deploy
  only:
    - dev
  variables:
   BRANCH: dev
  before_script:
    - chmod -R 764 ./deploy/scripts/*
    - ./deploy/scripts/artifact.sh
  script:
    - ./deploy/scripts/deploy.sh
  after_script:
    - ./deploy/scripts/finalize.sh

deploy_stage:
  stage: deploy
  only:
    - stage
  variables:
   BRANCH: stage
  before_script:
    - chmod -R 764 ./deploy/scripts/*
    - ./deploy/scripts/artifact.sh
  script:
    - ./deploy/scripts/deploy.sh
  after_script:
    - ./deploy/scripts/finalize.sh

deploy_master:
  stage: deploy
  only:
    - master
  variables:
   BRANCH: master
  before_script:
    - chmod -R 764 ./deploy/scripts/*
    - ./deploy/scripts/artifact.sh
  script:
    - ./deploy/scripts/deploy.sh
  after_script:
    - ./deploy/scripts/finalize.sh
{% if behat.enable %}

behat_build:
  stage: test
  only:
    - dev
  variables:
   BRANCH: dev
  before_script:
    - chmod -R 764 ./go/build-scripts/*
  script:
    - ./go/build-scripts/behat.sh
  after_script:
    - ./go/build-scripts/finalize.sh
  artifacts:
    when: always
    paths:
      - tests/behat/_output
  allow_failure: true
  when: on_success
{% endif %}