variables:
  ARTIFACT_DIR: {{ deploy.runner_artifact_dir }}

stages:
  - deploy
  - test

{% for key, server in servers %}
deploy_{{key}}:
  stage: deploy
  image: nortmas/drupal-go-runner
  tags:
    - docker
  only:
    - {{server.branch}}
  variables:
   BRANCH: {{server.branch}}
   SERVER_DIR: {{ server.project_dir }}
   SERVER_HOST: {{ server.host }}
   SERVER_USER: {{ server.user }}
   COMMAND: go_{{key}}_deploy
  before_script:
    - chmod -R 764 ./deploy/scripts/*
    - ./deploy/scripts/artifact.sh
  script:
    - ./deploy/scripts/deploy.sh
  after_script:
    - ./deploy/scripts/finalize.sh

{% endfor %}
{% if behat.enable %}
behat_test:
  stage: test
  image: nortmas/drupal-go-runner
  tags:
    - docker
  only:
    - dev
  variables:
    BRANCH: dev
    SERVER_DIR: ~/beg
    COMMAND: go_run_behat
  before_script:
    - chmod -R 764 ./deploy/scripts/*
  script:
    - ./deploy/scripts/behat.sh
  artifacts:
    when: always
    expire_in: 1 week
    paths:
      - artifact.tgz
  allow_failure: true
  when: manual
{% endif %}