# See https://github.com/drush-ops/drush/blob/master/examples/example.site.yml
self:
  root: '/var/www/html/web'
  uri: '{{ project_machine_name }}.docker.localhost:{{ port }}'

dev:
  host: '{{ drush.aliases.dev.host }}'
  user: '{{ drush.aliases.dev.user }}'
  root: '{{ drush.aliases.dev.root }}'
  uri: '{{ drush.aliases.dev.uri }}'
{% if drush.aliases.dev.use_docker %}
  paths:
    drush-script: '/home/{{ drush.aliases.dev.user }}/{{ gitlab.working_dir }}/dev/drush/drush-run.sh'
{% endif %}

dev-files:
  host: '{{ drush.aliases.dev.host }}'
  user: '{{ drush.aliases.dev.user }}'
  root: '/home/{{ drush.aliases.dev.user }}/{{ gitlab.working_dir }}/dev/web'
  uri: '{{ drush.aliases.dev.uri }}'
  paths:
    files: 'sites/default/files'

stage:
  host: '{{ drush.aliases.stage.host }}'
  user: '{{ drush.aliases.stage.user }}'
  root: '{{ drush.aliases.stage.root }}'
  uri: '{{ drush.aliases.stage.uri }}'
{% if drush.aliases.stage.use_docker %}
  paths:
    drush-script: '/home/{{ drush.aliases.dev.user }}/{{ gitlab.working_dir }}/stage/drush/drush-run.sh'
{% endif %}

stage-files:
  host: '{{ drush.aliases.stage.host }}'
  user: '{{ drush.aliases.stage.user }}'
  root: '/home/{{ drush.aliases.stage.user }}/{{ gitlab.working_dir }}/stage/web'
  uri: '{{ drush.aliases.stage.uri }}'
  paths:
    files: 'sites/default/files'

prod:
  host: '{{ drush.aliases.prod.host }}'
  user: '{{ drush.aliases.prod.user }}'
  root: '{{ drush.aliases.prod.root }}'
  uri: '{{ drush.aliases.prod.uri }}'
{% if drush.aliases.prod.use_docker %}
  paths:
      drush-script: '/home/{{ drush.aliases.dev.user }}/{{ gitlab.working_dir }}/master/drush/drush-run.sh'
{% endif %}

prod-files:
  host: '{{ drush.aliases.prod.host }}'
  user: '{{ drush.aliases.prod.user }}'
  root: '/home/{{ drush.aliases.prod.user }}/{{ gitlab.working_dir }}/prod/web'
  uri: '{{ drush.aliases.prod.uri }}'
  paths:
    files: 'sites/default/files'