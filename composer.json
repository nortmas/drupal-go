{
  "name": "Drupal Go",
  "description": "Drupal 8 project.",
  "require": {
    "wikimedia/composer-merge-plugin": "dev-master"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "go/go.composer.json"
      ],
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": true,
      "replace": false,
      "ignore-duplicates": true
    }
  }
}
